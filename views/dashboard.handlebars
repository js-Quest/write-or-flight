{{!-- new post option, submit button --}}
<div>
  <a href="/dashboard/new"><button id="create-post">Create Post</button></a>
</div>
{{!-- list of user's posts, clickable to expand to individual posts --}}
<div>
  {{#if posts.length}}
  {{#each posts as |post|}}
  <div>
    <h1>{{post.title}}</h1>
  </div>
  {{/each}}

  {{else}}
  <h2>There are no current posts</h2>

  {{/if}}
</div>
